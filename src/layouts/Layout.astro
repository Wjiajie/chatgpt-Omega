---
import Logo from '../components/Logo.astro'

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
  </head>
  <body>
    <slot />

	<style>	
		#expandButton:hover {
			opacity: 1;
		}
		
		#expandButton {
			opacity: 0.2;
			transition: opacity 0.5s ease;
		}
	</style>

    <div class="fixed top-10 left-10">
		<a id="expandButton" >
		  <Logo />
		</a>
	  
		{<script>
		  function openKeyUrl() {
			window.open("https://www.jiajiewu.top/", "_blank");
		  }
		</script>}
		<div id="getkey" class="menu hidden transition-all duration-500">
		  <div class="flex flex-col items-left justify-center">
			<button title='Clear' onclick="openKeyUrl()" h-12 px-4 py-2 bg-slate bg-op-10 hover:bg-op-50 text-slate rounded-sm>
				获取OPENAI_API_KEY
			</button>
		  </div>
		</div>
	  
		<div id="settingsMenu" class="menu hidden transition-all duration-500">
		  <div class="flex flex-col items-left justify-center">
			<button title='Clear' onclick="_blank" h-12 px-4 py-2 bg-slate bg-op-10 hover:bg-op-50 text-slate rounded-sm>
				设置
			</button>
		  </div>
		</div>
	</div>
	  
	<script>
		const expandButton = document.getElementById("expandButton");
		let isExpanded = false;
		expandButton.addEventListener("click", () => {
			isExpanded = !isExpanded;
		
			const list = document.getElementById("getkey");
			const settingsMenu = document.getElementById("settingsMenu");
			if (isExpanded) {
			list.classList.replace("block", "hidden");
			settingsMenu.classList.replace("block", "hidden");
			} else {
			list.classList.replace("hidden", "block");
			settingsMenu.classList.replace("hidden", "block");
			}
		
			// Add or remove classes to trigger animation
			setTimeout(() => {
			list.classList.toggle("opacity-0");
			settingsMenu.classList.toggle("opacity-0");
			}, 100);
		});
	</script>
  </body>
</html>

<style is:global>
	html {
	  font-family: system-ui, sans-serif;
	  background-color: #171921;
	  color: #ffffff;
	}
	main {
	  max-width: 70ch;
	  margin: 0 auto;
	  padding: 6rem 2rem 4rem;
	}
	/* Added styles */
	.fixed-top {
	  position: fixed;
	  top: 0;
	  left: 0;
	  display: flex;
	  justify-content: space-between;
	  align-items: center;
	  width: 100%;
	  padding: 0.5rem;
	}
	.fixed-top button {
	  margin-right: 1rem;
	}
	.fixed-top #list {
	  display: flex;
	  flex-direction: column;
	  align-items: center;
	  justify-content: center;
	  width: 100%;
	  background-color: rgba(255, 255, 255, 0.8);
	  border-radius: 0.5rem;
	  padding: 1rem;
	  margin-top: 2rem;
	  visibility: hidden;
	  opacity: 0;
	  transition: visibility 0s, opacity 0.5s linear;
	}
	.fixed-top #list a {
	  margin-bottom: 1rem;
	}
	.fixed-top #list.show {
	  visibility: visible;
	  opacity: 1;
	}
	@media screen and (min-width: 640px) {
	  .fixed-top {
		flex-direction: row;
	  }
	  .fixed-top #list {
		position: absolute;
		top: 100%;
		right: 0;
		margin-top: 0;
	  }
	}
</style>
